page {
  font-size: 36rpx;

  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  padding: 100rpx 0;

  position: relative;

  --theme-color: rgb(84, 184, 172);
}

/* 背景特殊图案元素 */
.bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -10;

  background-color: white;

  width: 100vw;
  height: 100vh;
}
.bg-bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -5;

  background-color: var(--theme-color, rgb(84, 184, 172));
  border-radius: 50rpx;

  width: 100vw;
  height: 100vw;

  transform: translateY(calc(200rpx - 100vw));
}

/* 用户头像及昵称 */
.user-info {
  width: calc(100vw - 100rpx);
  height: 200rpx;
  margin: 0 50rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  
  box-shadow: 5rpx 5rpx 10rpx #aaa;
  background-color: white;
  border-radius: 25rpx;
}

/* 头像 */
.avatar {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-img {
  width: 175rpx !important;
  height: 175rpx !important;
  border-radius: 25rpx ;
  box-shadow: 10rpx 10rpx 25rpx #ccc;
}
.img {
  border-radius: 25rpx ;
}

/* 昵称 */
.nickname {
  flex: 2;
}
.nickname-text {
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 40rpx;
  color: black;
  letter-spacing: 2.5rpx;
}

/* 列表样式 */
.list {
  margin: 100rpx 50rpx !important;

  box-shadow: 10rpx 10rpx 25rpx #ccc;
}

/* 列表退出按钮样式 */
.exit-warning {
  color: rgb(255, 77, 77);
}

/* 模态框样式 */
.popup {
  width: 100vw;
  height: auto;
  margin: 0;
  padding: 75rpx !important;

  min-height: 50vh;
  max-height: 75vh;
}
