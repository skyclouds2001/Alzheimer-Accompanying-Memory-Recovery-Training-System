page {
  font-size: 36rpx;
  background-color: whitesmoke;

  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  padding: 50rpx 0;

  position: relative;
}

/* 用户头像及昵称 */
.user-info {
  width: calc(100vw - 200rpx);
  height: 175rpx;
  margin: 0 100rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  
  box-shadow: 7.5rpx 7.5rpx 20rpx #ccc, -7.5rpx -7.5rpx 20rpx #fff;
  background-color: white;
  border-radius: 25rpx;
}

/* 头像 */
.avatar {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-img {
  width: 200rpx;
  height: 200rpx;
  box-shadow: 5rpx 5rpx 10rpx #aaa;
}

/* 昵称 */
.nickname {
  flex: 1.5;
}
.nickname-text {
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 40rpx;
  color: black;
  letter-spacing: 2.5rpx;
}

/* 列表样式 */
.list {
  margin-top: 100rpx !important;
  margin-bottom: 100rpx !important;

  box-shadow: 7.5rpx 7.5rpx 20rpx #ccc, -7.5rpx -7.5rpx 20rpx #fff;
}
