@import './../../style/icon.wxss';

page {
  font-size: 36rpx;

  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  padding: 100rpx 0;

  position: relative;

  --theme-color: #54b8ac;
}

/* 背景特殊图案元素 */
.bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -10;

  background-color: white;

  width: 100vw;
  height: 100vh;
}
.bg::after {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -5;

  content: '';

  background-color: var(--theme-color, rgb(84, 184, 172));
  border-radius: 50rpx;

  width: 100vw;
  height: 100vw;

  transform: translateY(calc(200rpx - 100vw));
}

/* 用户头像及昵称 */
.user-info {
  width: calc(100vw - 100rpx);
  height: 200rpx;
  margin: 0 50rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  
  box-shadow: 5rpx 5rpx 10rpx #aaa;
  background-color: white;
  border-radius: 25rpx;
}

/* 头像 */
.avatar {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-img {
  width: 175rpx !important;
  height: 175rpx !important;
  border-radius: 25rpx ;
  box-shadow: 10rpx 10rpx 25rpx #ccc;
}
.img {
  border-radius: 25rpx ;
}

/* 昵称 */
.nickname {
  flex: 2;
}
.nickname-text {
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 40rpx;
  color: black;
  letter-spacing: 2.5rpx;
}

/* 列表样式 */
.list {
  margin: 100rpx 50rpx !important;

  box-shadow: 10rpx 10rpx 25rpx #ccc;
}

/* 列表退出按钮样式 */
.exit-warning {
  color: rgb(255, 77, 77);
}

/* 模态框样式 */
.popup {
  width: 100vw;
  height: auto;
  margin: 0 !important;
  padding: 75rpx !important;
  box-sizing: border-box;

  min-height: 50vh;
  max-height: 100vh;

  background-color: rgb(167, 255, 245) !important;

  overflow: scroll;
}

/* 个人信息 show=1 */
.person-info {
  margin: 0 !important;
  background-color: transparent !important;
  box-shadow: 5rpx 5rpx 10rpx rgb(205, 223, 221);
}

/* 打卡记录 show=2 */
.van-calendar {
  background-color: rgba(255, 255, 255, 0.9) !important;
  border-radius: 15rpx !important;
  box-shadow: 5rpx 5rpx 10rpx #ccc !important;
  overflow: hidden !important;
}
.select .van-calendar__bottom-info::after {
  content: '\2714';

  color: red;
  font-size: 50rpx;
  font-weight: bold;

  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 训练记录 show=3 */

/* 我的积分 show=4 */
.credit-title {
  width: 100%;
  height: 1.25em;
  margin: 0;
  padding: 0;

  font-size: 35rpx;
  color: rgb(65, 65, 65);
  text-align: center;
  line-height: 1.25em;
}
.credit-count {
  width: 100%;
  height: 2.5em;
  margin: 0;
  padding: 0;

  font-size: 100rpx;
  color: rgb(255, 83, 83);
  text-align: center;
  line-height: 2.5em;
  font-weight: bold;
}

/* 积分商城 show=5 */
.card-item {
  margin: 25rpx 0 !important;
  border-radius: 25rpx !important;
  box-shadow: 5rpx 5rpx 12.5rpx #ccc;
}

/* 问题反馈 show=6 */
.feedback-input {
  width: 100%;
  height: 60vh;
  margin: 0;
  padding: 25rpx;
  box-sizing: border-box;

  border: 1rpx solid greenyellow;
  border-radius: 25rpx;
  background-color: white;
}
.feedback-button {
  margin: 50rpx auto 0;
}

/* 关于我们 show = 7 */
.about {
  margin: 0;
  padding: 25rpx;

  background-color: rgb(199, 223, 220);
  border-radius: 25rpx;

  font-size: 30rpx;
  letter-spacing: 1rpx;
  text-indent: 2em;
  line-height: 1.25em;
}
