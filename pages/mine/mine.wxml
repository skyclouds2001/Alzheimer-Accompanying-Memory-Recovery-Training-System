<!-- 用户头像及昵称部分 -->
<view class="user-info">
  <!-- 用户头像 -->
  <view class="avatar">
    <van-image width="100" height="100" src="{{avatarUrl}}" round fit="cover" show-loading show-error lazy-load bind:click="onGetUserProfile" custom-class="avatar-img"></van-image>
  </view>
  <!-- 用户昵称 -->
  <view class="nickname">
    <view class="nickname-text">{{nickName}}</view>
  </view>
</view>

<!-- 个人中心详细选项 -->
<van-cell-group inset border custom-class="list">
  <van-cell border title="我的积分" is-link url="" icon="award-o" />
  <van-cell border title="打卡记录" is-link url="" icon="certificate" />
  <van-cell border title="训练记录" is-link url="" icon="chart-trending-o" />
  <van-cell border title="个人信息" is-link url="" icon="more-o" />
  <van-cell border title="积分商城" is-link url="" icon="shopping-cart-o" />
  <van-cell border title="问题反馈" is-link url="" icon="comment-o" />
  <van-cell border title="关于我们" is-link url="" icon="info-o" />
</van-cell-group>

<!-- 提示框 -->
<van-toast id="van-toast" />
