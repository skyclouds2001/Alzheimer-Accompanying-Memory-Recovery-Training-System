<view class="top">问题{{ index }}(共{{ length }}题)</view>

<view class="below">

  <!-- 显示问题的内容 -->
  <view class="question">{{ question.name }}</view>

  <!-- [type=5存在] 类型问题的图片 -->
  <!-- <view wx:if="{{ question.type === 5 }}">
    <block wx:for="{{ question.img }}" wx:key="*this">
      <image class="qpicture" src="{{ item }}" wx:if="{{ true }}"></image>
    </block>
  </view> -->

  <!-- 客观题四个选项 -->
  <view class="allans">
    <block wx:if="{{ question.type === 1 }}">
      <view bind:tap="handleChooseAnswer">
        <view class="answer {{ question.reply === index + 1 ? 'select' : '' }}" wx:for="{{ question.checks }}" wx:key="*this" data-id="{{ index + 1 }}">{{ item[0] }} . {{ item[1] }}</view>
      </view>
    </block>

    <!-- 主观题输入框 -->
    <block wx:if="{{ question.type === 2 }}">
      <input class="fillblank" type="text" value="{{ question.answer }}" placeholder="点击在此输入内容" placeholder-class="pl" bind:confirm="handleInputConfirm" />
    </block>
  </view>

  <!-- 切换按钮 -->
  <view bind:tap="handleChangePage">
  
    <!--上一题的按钮-->
    <view wx:if="{{ index > 1 && index <= length }}" class="selfbutton1" data-flag="{{ -1 }}">上一题</view>

    <!--下一题的按钮-->
    <view wx:if="{{ index >= 1 && index < length  }}" class="selfbutton2" data-flag="{{ 1 }}">下一题</view>

    <!--结束答题的按钮-->
    <view wx:if="{{ index === length  }}" catch:tap="handleEndAnswer" class="selfbutton2">提交答案</view>

  </view>

</view>

<!-- toast提示框 -->
<van-toast id="van-toast" />
