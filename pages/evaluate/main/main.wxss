/* 得分 */
.score {
  font-size: 30px;
  text-align: center;
  margin-top: 50px;
}

/* 判断结果 */
.result {
  font-size: 25px;
  text-align: center;
  margin-top: 10px;
  margin-bottom: 350rpx;

  /* by csy */
  color: #000000b7;
}

/* 返回按钮 */
.back-button {
  border: 1px solid #e6e5e3;
  width: 260px;
  padding-top: 15px;
  padding-bottom: 15px;
  text-align: center;
  margin: 0 auto;
  border-radius: 5%;
  background-color: #54b7ab;

  /* by csy */
  font-size: 37rpx;
  letter-spacing: 5rpx;
  font-weight: bold;
  color: white;
  border-radius: 25rpx;
}

/* 提示 */
.tips {
  margin-top: 150rpx;
  color: #838383;

  /* by csy */
  padding: 0 20rpx;
  font-size: 30rpx;
}
