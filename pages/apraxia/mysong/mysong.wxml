<view class="header">我的喜欢</view>

<!-- 主要内容区 -->
<view class="content">
  <block wx:for="{{ mysongs }}" wx:key="id">
    <view class="item_song">
      <!-- 收藏歌曲下标 -->
      <view class="index {{ index >= 9 ? 'index_big' : 'index_small' }}">
        <text>{{ index + 1 }}</text>
      </view>
      <!-- 收藏歌曲介绍 -->
      <view class="introduce">
        <view class="item_name">{{ item.name }}</view>
        <view class="singer_name">{{ item.singer }} - {{ item.album }}</view>
      </view>
      <!-- 收藏歌曲播放控制 -->
      <view class="icon">
        <text class="{{ item.isplay ? 'iconfont icon-stop' : 'iconfont icon-play' }}" bindtap="play" 
        data-isplay="{{ item.isplay }}" data-index="{{ index }}" data-src="{{ item.src }}" data-name="{{ item.name }}" data-singer="{{ item.singer }}" data-album="{{ item.album }}"></text>
      </view>
    </view>
    <van-divider class="divider"></van-divider>
  </block>
</view>