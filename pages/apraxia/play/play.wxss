@import './../../../style/iconfont.wxss';

.content{
  width: 100%;
  height: 100%;
  background: #222;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}
.big_img{
  width: 100%;
  height: 100%;
  opacity: 0.1;
}
.title{
  width: 100%;
  font-size: 40rpx;
  position: absolute;
  left: 0rpx;
  right: 80rpx;
  color: white;
  text-align: center;
}
.middle{
  width: 100%;
  height: 700rpx;
  /*background-color: red;*/
  position: absolute;
  top:170rpx;
  left: 0rpx;
}
.middle-swiper{
  width: 100%;
  height: 100%;
}
.cd-wrapeer{
  width: 100%;
}
.cd-image{
  width: 600rpx;
  height: 600rpx;
  margin: 50rpx auto;

  display: flex;
  justify-content: center;
  align-items: center;
}
.cd-image image{
  box-sizing: content-box;
  width: 400rpx;
  height: 400rpx;

  border-radius: 50%;
  border:#222 solid 100rpx;

  animation:zhuan 6s linear infinite
}
@keyframes zhuan{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
.lyric-wrapeer{
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
.lyric-wrapeer text{
  display: block;
}
::webkit scrollbar{
  width: 0rpx;
  height: 0rpx;
}
.controls{
  width: 100%;
  height: 150rpx;
  position: absolute;
  bottom: 50rpx;
  left: 0rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-around;
}
.controls image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 102rpx;
  margin-top: 17rpx;
}
.text{
font-size: 66rpx;
text-align: center;
vertical-align: baseline;
}
.icon{
  margin-top: 30rpx;
}