/* 歌单名称及图片部分 */
.image{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}
.header{
  height: 200rpx;
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}
.cover_img{
  width: 200rpx;
  height: 200rpx;
}
.listname{
  margin-left: 0;
  font-size: 60rpx;
}
.cover_name{
  font-size: 44rpx;
  text-align: center;
  margin-top:10rpx;
}
.background_img{
  width: 100%;
  height: 100%;
  opacity: 0.5;
}
.content{
  position: relative;
  z-index:1
}

/* 歌单歌曲 */
.item_song{
  display: flex;
  height: 120rpx;
}
.index{
  text-align: center;
  vertical-align: baseline;
  font-size: 60rpx;
  margin-left: 50rpx;
  align-self:center
}
.index_small{
  margin-right: 65rpx;
}
.index_big{
  margin-right: 25rpx;
}
.item_name{
  font-size: 44rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-weight: 200;
}
.singer_name{
  font-size:30rpx;
  margin-top: 0rpx;
  padding: 0rpx;

}
.divider{
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  padding: 0rpx;
}
.txt{
  font-size: medium;
}