.bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -10;
  background-color: white;
  width: 100vw;
  height: 100vh;
}

.bg::after {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -5;
  content: '';
  background-color: var(--theme-color, rgb(84, 184, 172));
  border-radius: 50rpx;
  width: 100vw;
  height: 100vw;
  transform: translateY(calc(200rpx - 100vw));
}

