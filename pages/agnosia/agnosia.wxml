
<!-- 弹出框 -->
<van-transition show="{{ show }}" custom-class="block"
duration="{{ { enter: 500, leave: 500 } }}">
  <view id="tip">{{judge}}</view>
</van-transition>

<!-- 分数显示框 -->
<view id="scoreshow" hidden="{{condition}}" ><van-tag plain size='large' color="#ffe1e1" text-color="#ad0000" >score：{{score}}</van-tag></view>


<!-- 图片 -->
<view id="tu" hidden="{{condition}}">
<image src="{{image_src[index]}}" mode="scaleToFill"  ></image>
</view>
<!-- 选项栏 -->
<view id="chose" hidden="{{condition}}">
  <van-radio-group value="{{ radio }}" bind:change="onChange">
  <van-cell-group>
    <van-cell title="{{chose[index][0]}}" clickable data-name="1" bind:click="onClick">
      <van-radio slot="right-icon" name="1" />
    </van-cell>
    <van-cell title="{{chose[index][1]}}" clickable data-name="2" bind:click="onClick">
      <van-radio slot="right-icon" name="2" />
    </van-cell>
    <van-cell title="{{chose[index][2]}}" clickable data-name="3" bind:click="onClick">
      <van-radio slot="right-icon" name="3" />
    </van-cell>
    <van-cell title="{{chose[index][3]}}" clickable data-name="4" bind:click="onClick">
      <van-radio slot="right-icon" name="4" />
    </van-cell>
  </van-cell-group>
</van-radio-group>
</view>

<!-- 提交按钮 -->
<view id="submit" hidden="{{condition}}"><van-button disabled='{{isdisable}}' type="primary" bindclick="change" size="large">{{submit_text}}</van-button></view>
<!-- 训练成绩 -->
<view id="final_score" hidden="{{!condition}}">
<view id="head">恭喜完成本次训练！</view>
<view id="score_show">本次训练得分为{{score}}</view>

</view>
<!-- 重新开始 -->
<view id="restart" hidden="{{!condition}}"><van-button type="primary" bindtap="restart" size="large">重新开始</van-button></view>
