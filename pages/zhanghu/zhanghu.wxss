#bgcbox {
  position:absolute;
  height: 330rpx;
  width: 720rpx;
  display: flex;
  background-color: #53b6aa;
  color: white;
  font-weight: 400;
  font-size: larger;
  justify-content: center;
  line-height: 200rpx;
  left: 15rpx;
  top: 0;
  border-radius: 0 0 60rpx 60rpx;
  z-index: -1;
}

/* 用户头像及昵称 */
.user-info {
  width: calc(100vw - 100rpx);
  height: 200rpx;
  margin: 0 50rpx;
  margin-top: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 5rpx 5rpx 10rpx #aaa;
  background-color: white;
  border-radius: 35rpx;
}

/* 头像 */
.avatar {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-img {
  width: 175rpx !important;
  height: 175rpx !important;
  border-radius: 25rpx ;
  box-shadow: 10rpx 10rpx 25rpx #ccc;
}
.img {
  border-radius: 25rpx ;
}

/* 昵称 */
.nickname {
  flex: 2;
}
.nickname-text {
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 40rpx;
  color: black;
  letter-spacing: 2.5rpx;
}

.list {
  margin: 100rpx 50rpx !important;

  box-shadow: 10rpx 10rpx 25rpx #ccc;
}
.input_area{
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  color: #55c5ab;
  font-size: x-large;
}
.title{
  height: 150rpx;
  font-size: x-large;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.content{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.iptbox{
  width: 110rpx;
  height: 110rpx;
  border:1rpx solid #b2b0bb;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.ipt{
  width: 0;
  height: 0;
}
.btn_area{
  height: 200rpx;
  display: flex;
  justify-content:space-around;
  align-items: center;


}
.check,
.cancel{
   height: 100rpx;
   width: 300rpx;
   background-color: #54b5aa;
   color: white;
   font-size: large;
   border-radius: 30rpx;
   display: flex;
   justify-content: center;
   align-items: center;
}
