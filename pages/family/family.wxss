#bgcbox {
  position:absolute;
  height: 330rpx;
  width: 720rpx;
  display: flex;
  background-color: #53b6aa;
  color: white;
  font-weight: 400;
  font-size: larger;
  justify-content: center;
  line-height: 200rpx;
  left: 15rpx;
  top: 0;
  border-radius: 0 0 60rpx 60rpx;
  z-index: -1;
}

/* 用户头像及昵称 */
.user-info {
  width: calc(100vw - 100rpx);
  height: 200rpx;
  margin: 0 50rpx;
  margin-top: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 5rpx 5rpx 10rpx #aaa;
  background-color: white;
  border-radius: 35rpx;
}

/* 头像 */
.avatar {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-img {
  width: 175rpx !important;
  height: 175rpx !important;
  border-radius: 25rpx ;
  box-shadow: 10rpx 10rpx 25rpx #ccc;
}
.img {
  border-radius: 25rpx ;
}

/* 昵称 */
.nickname {
  flex: 2;
}
.nickname-text {
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 40rpx;
  color: black;
  letter-spacing: 2.5rpx;
}
#tab_bar {
  width: calc(100vw - 100rpx);
  height: 450rpx;
  margin: 0 auto;
  margin-top:75rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-content: space-around;

}

.tab{
  width:calc(48vw - 48rpx) ;
  height: 160rpx;
  background-color: white;
  border-radius: 30rpx;
  box-shadow: 3rpx 3rpx 10rpx #aaa;
  display: flex;
}
.i1{
  flex: 2.5;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: orange; */
}
.i1 image {
  width: 100%;
  height: 120rpx;
}
.i2{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: blue; */
}
.i3{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items:flex-end;

}
.i3 image {
  width: 50rpx;
  height: 50rpx;
}

