.showbox{
  /* 整个展示框 */
  border: 1px solid #ffffff;
  height: 255rpx;
}
.picture{
  /* 图片 */
  border: 1px solid #ffffff;
  width: 200rpx;
  height: 200rpx;
  margin-left: 22rpx;
  margin-top: 26rpx;
  margin-bottom: 26rpx;
  border-radius: 20px;
  float: left;
}
.newstext{
  /* 把标题和内容框框起来的一个盒子 */
  border: 1px solid #ffffff;
  width: 420rpx;
  float: left;
  margin-left: 25rpx;
  margin-top: 40rpx;
}
.newstitle{
  /* 标题 */
  border: 1px solid #ffffff;
  font-weight: 500;
  font-size: 20px;
}
.partcontent{
  /* 文章的开头部分内容 */
  border: 1px solid #ffffff;
  height: 100rpx;
  margin-top: 3px;
}
.jumptip{
  /* 右边的一个小箭头 */
  width: 15px;
  height: 13px;
  float: right;
  margin-top: 126rpx;
  margin-bottom: 126rpx;
}
.line{
  /* 下面的小横线 */
  border-top: 1px solid #83838360;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 250rpx;
}
