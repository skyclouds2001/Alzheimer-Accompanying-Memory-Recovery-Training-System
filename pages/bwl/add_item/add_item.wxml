<view class="title_area">
  <view class="h1">标题</view>
  <input class="title" model:value="{{ title }}" type="text" placeholder="请在此输入标题" placeholder-style="" />
</view>

<view class="content_area">
  <view class="h1">内容</view>
  <textarea class="content" model:value="{{ content }}" placeholder="请在此输入内容" placeholder-style="" maxlength="2000" />
</view>

<view class="btn_area">
  <button class="submit" size="default" bind:tap="handleSubmit">创建事项</button>
</view>

<van-toast id="van-toast" />
