
<!--搜索框-->
<view class="search_area">
<input class="search_ipt"  placeholder="搜索备忘录" placeholder-class="input-placeholder" bindinput = "handdleInput"> 
</input>
<view class="search_ico" >
    <van-icon name="search" color="blue" size="30"/>
</view>
</view>

<!--请求结果list -->

<view class="search_content" >
<navigator class="search_item" wx:for="{{search_item}}" wx:key="record_id" url="./detail/detail?recordid={{item.record_id}}&time={{item.time}}&title={{item.title}}">
    <view class="ico"><van-icon name="arrow" /></view>
    <view class="title" >
        {{item.title}}
    </view>
    <view class="time">
        {{item.time}}
    </view>
</navigator>

</view>

<!-- tabbar-->
<new_tab element_list="{{element_list}}" select_index="{{select_index}}"></new_tab>