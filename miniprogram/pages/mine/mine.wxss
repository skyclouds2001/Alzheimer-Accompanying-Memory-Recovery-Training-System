page {
  font-size: 36rpx;

  width: 100vw;
  height: 100vh;
  padding: 100rpx 0 0;

  position: relative;

  --theme-color: #54b8ac;
}

/* 背景特殊图案元素 */
.bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -10;

  background-color: white;

  width: 100vw;
  height: 100vh;
}
.bg::after {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -5;

  content: '';

  background-color: var(--theme-color, rgb(84, 184, 172));
  border-radius: 50rpx;

  width: 100vw;
  height: 100vw;

  transform: translateY(calc(200rpx - 100vw));
}

/* 用户头像及昵称 */
.user-info {
  width: calc(100vw - 100rpx);
  height: 200rpx;
  margin: 0 50rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  
  box-shadow: 5rpx 5rpx 10rpx #aaa;
  background-color: white;
  border-radius: 25rpx;
}

/* 头像 */
.avatar {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-img {
  width: 175rpx !important;
  height: 175rpx !important;
  border-radius: 25rpx ;
  box-shadow: 10rpx 10rpx 25rpx #ccc;
}
.img {
  border-radius: 25rpx ;
}

/* 昵称 */
.nickname {
  flex: 2;

  width: auto;
  height: 75%;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.nickname-text {
  flex: 2;

  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 40rpx;
  color: black;
  letter-spacing: 2.5rpx;
}
.link-with {
  flex: 1;

  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 32rpx;
  color: #999;
  letter-spacing: 1rpx;
}

/* 列表样式 */
.list {
  margin: 100rpx 50rpx !important;

  box-shadow: 10rpx 10rpx 25rpx #ccc;
}

/* 列表退出按钮样式 */
.exit-warning {
  color: rgb(255, 77, 77);
}

/* 模态框样式 */
.popup {
  margin: 0 !important;
  padding: 100rpx 50rpx !important;

  background-color: rgb(241, 255, 253) !important;
  border-radius: 50rpx !important;

  z-index: 99999 !important;
}

.popup-outer {
  z-index: 999999 !important;
}

.qrcode {
  background-color: rgba(255, 255, 255, 1) !important;
  backdrop-filter: blur(5rpx);
}
.van-icon.van-icon-cross {
  color: black;
}

/* 我的积分弹出框 */
.credit-title {
  width: 300rpx;
  height: 1.25em;
  margin: 0;
  padding: 0;

  font-size: 35rpx;
  color: rgb(65, 65, 65);
  text-align: center;
  line-height: 1.25em;
}
.credit-count {
  width: 300rpx;
  height: 2em;
  margin: 0;
  padding: 0;

  font-size: 100rpx;
  color: rgb(255, 83, 83);
  text-align: center;
  line-height: 2em;
  font-weight: bold;
}
